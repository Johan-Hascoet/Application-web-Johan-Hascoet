{% extends "basetemplate.html.twig" %}
{% block title%}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="row justify-content-around">
    <div class="col-10 text-center">
        <div class="pull-right">
        </div>
        
        <h1 class="my-5">Détails de la nationnalité : {{ detailsNationnalite.nomNatio }}</h1>
        <hr class="my-3">

        <div class="row my-5 justify-content-evenly">
            <div class="col-3 bg-light shadow rounded p-4">
                <div class="text-center">
                    <h4>Agents ayant la nationnalité</h4>
                    <hr class="bg-primary text-primary">
                </div>
                <p>{% for agent in detailsNationnalite.agents %} - {{ agent.nom }} {{ agent.prenom }}<br/>{% else %} Aucun agent {% endfor %}</p>
            </div>

            <div class="col-3 bg-light shadow rounded p-4">
                <div class="text-center">
                    <h4>Contacts ayant la nationnalité</h4>
                    <hr class="bg-primary text-primary">
                </div>
                <p>{% for contact in detailsNationnalite.contacts %} - {{ contact.nom }} {{ contact.prenom }}<br/>{% else %} Aucun contact {% endfor %}</p>
            </div>

            <div class="col-3 bg-light shadow rounded p-4">
                <div class="text-center">
                    <h4>Cibles ayant la nationnalité</h4>
                    <hr class="bg-primary text-primary">
                </div>
                <p>{% for cible in detailsNationnalite.cibles %} - {{ cible.nom }} {{ cible.prenom }}<br/>{% else %} Aucun contact {% endfor %}</p>
            </div>
        </div>

        <a href ="{{ path('nationnalite-modification', {id: detailsNationnalite.id}) }}" class ="my-5 btn btn-primary">Modifier nationnalité</a>

    </div>
</div>

</html>
{% endblock %}